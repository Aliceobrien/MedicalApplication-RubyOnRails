<%= form_for([@patient, @patient.comments.build]) do |f| %>
 <p>
 <%= f.label :name %><br>
 <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
 </p>
 <p>
 <%= f.label :date %><br>
 <%= f.text_area :date, class: "form-control", placeholder: "Enter date YYYY-MM-DD" %>
 </p>
  <p>
 <%= f.label :time %><br>
 <%= f.text_area :time, class: "form-control", placeholder: "Enter time" %>
 </p>
  <p>
 <%= f.label :notes %><br>
 <%= f.text_area :notes, class: "form-control", placeholder: "Enter your notes" %>
 </p>
 <p>
 <%= f.submit %>
 </p>
<% end %> 