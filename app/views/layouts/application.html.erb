<!DOCTYPE html>
<html>
  <head>
    <title>SHC-PMS</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="#">  SHCPMS</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link">
                    <%= render 'devise/menu/login_items', {:class => "link"} %> 
                    </li>
                    </a>
                    <li class="nav-item">
                      <a class="nav-link">
                        <%= render 'devise/menu/registration_items',{:class => "link"} %> 
                        </li>
                        </a>
                        <li class="nav-item">
                          <a class="nav-link">
                            <%= link_to '_User Profile_', users_path %>  
                            </li>
                            </a>
                            <li class="nav-item">
                              <a class="nav-link">
                                <%= link_to '_Home', patients_path %>
                                </li>
                                </a>
                                </div>
                                </nav> 
                                <%= yield %>
                                <!-- Footer -->
                                <footer>
                                  <div class="container text-center">
                                    <p>Copyright &copy; SHCPMS</p>
                                    </div>
                                    </footer>
                                    <p class="alert"><%= alert %></p>
                                    </div>
                                    </body>
                                    </html>