<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4">Patients</h1>
  <p class="lead">Click on patients to view their details</p>
  <hr class="my-4">
  <p class="lead">

   <%= link_to 'New Patient', new_patient_path, class: "btn btn-outline-success my-2 my-sm-0" %> 
   
<div align="right">
<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Patients" %>
<%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
<% if @patient.present? %>
<% else %>
  <p>There are no patient containing the term(s) <%= params[:search] %>.</p>
<% end %>
<% end %>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Health</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.health %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-outline-success my-2 my-sm-0" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-outline-success my-2 my-sm-0" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-success my-2 my-sm-0" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </p>
</div>
  <hr class="my-4"></hr>
  <p class="lead"></p>

<br>






