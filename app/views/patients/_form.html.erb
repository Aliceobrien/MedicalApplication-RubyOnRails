  <div class="field">
    <%= form.label :dob %>
    <%= form.text_field :dob, id: :patient_dob, class: "form-control", placeholder: "Enter your Date of Birth" %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :patient_address, class: "form-control", placeholder: "Enter your Address" %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :patient_phone, class: "form-control", placeholder: "Enter your Phone" %>
  </div>

  <div class="field">
    <%= form.label :health %>
    <%= form.text_field :health, id: :patient_health, class: "form-control", placeholder: "Enter your Health" %>
  </div>

<br>
